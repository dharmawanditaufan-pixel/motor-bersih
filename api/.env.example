# Motor Bersih POS - Environment Configuration
# Created: January 16, 2026
# Note: Keep this file PRIVATE and never commit to version control

# Application Settings
APP_NAME=Motor Bersih POS
APP_VERSION=2.0
APP_ENV=development
APP_TIMEZONE=Asia/Jakarta

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=motowash_db
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8080,http://127.0.0.1
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Logging Settings
LOG_LEVEL=debug
LOG_PATH=./logs
LOG_MAX_SIZE=10485760

# Email Settings (if needed for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@motobersih.local

# Feature Flags
ENABLE_CAMERA_CAPTURE=true
ENABLE_MEMBER_SYSTEM=true
ENABLE_COMMISSION_TRACKING=true
ENABLE_AUDIT_LOGGING=true

# Pricing Configuration (in IDR)
BASIC_WASH_PRICE=75000
STANDARD_WASH_PRICE=100000
PREMIUM_WASH_PRICE=150000

# Commission Settings
DEFAULT_COMMISSION_RATE=30
MEMBER_DISCOUNT_RATE=10

# API Keys (if using external services)
# GOOGLE_MAPS_API_KEY=
# PAYMENT_GATEWAY_KEY=
# SMS_GATEWAY_KEY=
